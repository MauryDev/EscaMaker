<MudTd DataLabel="Dia">@(Dia.ToString("D2"))</MudTd>
<MudTd DataLabel="Nome">
	<MudTextField Value="@Name" ValueChanged="@NameChanged"  Variant="Variant.Text" Margin="Margin.Dense" /> @* MudTextField com Variant.Text dentro da tabela *@
</MudTd>

@code {
	[Parameter]
	public required string Name { get; set; }
	[Parameter]
	public EventCallback<string> NameChanged { get; set; }
	[Parameter]
	public byte Dia { get; set; }
	
}