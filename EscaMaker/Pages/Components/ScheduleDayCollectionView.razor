<MudExpansionPanel Text="@Value.Header" HideIcon="true">

	
	<MudTable Items="@DiasIndex" Dense="true" Hover="true" Bordered="false" Striped="true">
		<HeaderContent>
			<MudTh Style="width: 50px">Dia</MudTh>
			<MudTh>Nome</MudTh>
		</HeaderContent>
		<RowTemplate>
			<ScheduleDay @bind-Name="Names[context.Index]" Dia="@context.Dia" />
		</RowTemplate>
	</MudTable>
</MudExpansionPanel>

@code {
	[Parameter]
	public (int Index, IEnumerable<byte> Dias, string Header) Value { get; set; }
	[Parameter]
	public required List<string> Names { get; set; }
	public IEnumerable<(byte Dia, int Index)> DiasIndex => Value.Dias.Select((dia, idx) => (dia, idx));
}
